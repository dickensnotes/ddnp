---
const { image, altText, name, role } = Astro.props;
---

<section>
  <p class="text-lg">
    <span class="font-bold">{name}</span> - <span class="italic">{role}</span>
  </p>

  <div class="flex gap-6 justify-between -mt-4">
    <div>
      <img
        class="max-w-[10rem] h-auto shadow-md rounded-md"
        src={image}
        alt={altText}
      />
    </div>
    <div class="">
      <slot />
    </div>
  </div>
</section>
