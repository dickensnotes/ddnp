---
const { link } = Astro.props;
---

<!-- Code adapated from https://tailwindcomponents.com/component/cta-cards/ -->
<div
  class="max-w-screen md:w-3/4 rounded-md bg-ddnpblue/10 border border-ddnpblue pb-8"
>
  <div class="flex flex-col items-center h-full rounded-xl">
    <div class="w-2/3">
      <p class="w-full text-2xl font-semibold">Read the Working Notes</p>
      <p class="w-full text-md tracking-wide leading-tight">
        See Dickens' Notes and ...
      </p>
      <a href={link}>
        <button class="rounded">
          <div
            class="opacity-95 rounded-md border border-ddnpblue px-8 py-2 bg-white/100"
          >
            <p
              class="m-auto inset-0 text-md font-bold leading-normal text-center"
            >
              Go to Mirador
            </p>
          </div>
        </button>
      </a>
    </div>
  </div>
</div>
