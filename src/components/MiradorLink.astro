---
const { link, title } = Astro.props;
---

<!-- Code adapated from https://tailwindcomponents.com/component/cta-cards/ -->
<div
  class="max-w-screen mx-auto rounded-md bg-ddnpblue/10 border border-ddnpblue"
>
  <div
    class="flex flex-col sm:flex-row md:space-y-2 items-center justify-center h-full sm:py-4 px-2 bg-gray-800 rounded-md"
  >
    <div class="w-full sm:w-2/3">
      <p class="w-full text-2xl font-semibold text-white">
        Explore the Working Notes
      </p>
      <p class="w-full pb-8 text-sm tracking-wide leading-tight text-white">
        View Dickens's Notes for <span class="italic">{title}</span> and read our
        Editorial Annotations in Mirador.
      </p>
      <a href={link}>
        <button class="rounded w-1/3">
          <div
            class="opacity-95 border rounded-md border-ddnpblue bg-white/100 px-4"
          >
            <p
              class="m-auto inset-0 text-md font-semibold leading-normal text-center text-gray-800 py-2"
            >
              Open Viewer
            </p>
          </div>
        </button>
      </a>
    </div>
    <div class="w-1/3 sm:max-w-md">
      <img
        class="flex-1 h-full rounded-md"
        src="/images/bleak_house/BHVI.jpeg"
      />
    </div>
  </div>
</div>
